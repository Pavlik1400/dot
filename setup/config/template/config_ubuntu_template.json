{
    "type": "ubuntu",
    "install_cmd": "sudo apt install -y",
    "install_terminal_packages": true,
    "terminal_packages": [
        "make",
        "cmake",
        "git",
        "zsh",
        "htop",
        "bat",
        "exa",
        "ncdu",
        "expect",
        "wget",
        "vim"
    ],
    "install_gui_packages": true,
    "gui_packages": [
        "gnome-tweaks",
        "ranger",
        "rclone",
        "simplescreenrecorder",
        "vlc",
        "ranger",
        "terminator",
        "code"
    ],
    "install_special_packages": true,
    "special_packages": [
        {
            "do_install": true,
            "metadata": "apt_from_other_repository",
            "install_cmd": "sudo apt install -y",
            "add_repository_cmd": "sudo add-apt-repository --yes",
            "repository": "ppa:linuxuprising/apps",
            "packages": [
                "tlp",
                "tlpui"
            ]
        },
        {
            "do_install": true,
            "metadata": "flatpak_packages",
            "install_cmd": "flatpak install -y",
            "packages": [
                "org.telegram.desktop",
                "org.ferdium.Ferdium",
                "org.keepassxc.KeePassXC",
                "org.gnome.Cheese",
                "us.zoom.Zoom"
            ]
        }
    ],
    "install_configs": true
}